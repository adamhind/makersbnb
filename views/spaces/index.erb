<ul>
  <% @spaces.each do |space| %>
    <li>
      <%= space.name %>
      <%= space.description %>
      <%= space.price %>

      <form action = '/spaces/request' method = 'POST'>
        <input type = 'hidden' name = 'name' value = '<%=space.name%>'>
        <input type = 'submit' value = 'Request <%=space.name%>'>
      </form>
    </li>
  <% end %>
 </ul>

 <form action = '/spaces/new' method = 'GET'>
  <input type='submit' value='Add a space'>
 </form>

